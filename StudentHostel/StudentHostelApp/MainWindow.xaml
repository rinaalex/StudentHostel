<Window x:Class="StudentHostelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentHostelApp"
        mc:Ignorable="d"
        Title="Student Hostel" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource GridStyle}">
        <WrapPanel Orientation="Horizontal">
            <Button Content="Студенты" Click="Button_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Учебные группы" Click="Button_Click_1" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Расселение" Click="Button_Click_2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Комнаты" Click="Button_Click_3" Style="{StaticResource ButtonStyle}"/>
        </WrapPanel>
    </Grid>
</Window>
